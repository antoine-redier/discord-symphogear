{
    "name": "bottomless-pit-bot",
    "version": "1.1.0",
    "description": "Bot used to assist some activities on our discord server",
    "main": "bot.js",
    "author": "Lucas De Angelis <deangelis.lucas@outlook.com>",
    "repository": "https://github.com/lucas-deangelis/discord-symphogear",
    "scripts": {
        "start": "node bot.js",
        "test": "jest",
        "format": "prettier --write '*.js'",
        "lint": "eslint '*.js'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm test"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "git add",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "discord.js": "^11.5.1",
        "dotenv": "^8.2.0",
        "pg": "^7.12.1"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.3",
        "prettier": "^1.19.1"
    }
}